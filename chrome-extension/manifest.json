{
  "manifest_version": 2,
  "name": "PTT Hate Speech Tagger",
  "description": ":DDDDDDD",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
     "storage", "background", "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.ptt.cc/*"
      ],
      "js": [
        "execute.js"
      ]
    }
  ]
}